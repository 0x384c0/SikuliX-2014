	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.sikulix</groupId>
		<artifactId>sikulixdeploy</artifactId>
		<version>1.1.0</version>
		<relativePath>../</relativePath>
	</parent>

	<groupId>com.sikulix</groupId>
	<artifactId>sikulixlibslux</artifactId>
	<version>1.1.0-SNAPSHOT</version>

	<packaging>jar</packaging>

	<name>SikuliX Libs Linux</name>
	<description>supporting native libraries for Linux</description>
	<url>http://www.sikulix.com</url>

	<licenses>
		<license>
			<name>MIT License</name>
			<url>http://www.sikulix.com/disclaimer.html</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>RaiMan</id>
			<name>Raimund Hocke</name>
			<email>rmhdevelop@me.com</email>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git@github.com:RaiMan/SikuliX-2014.git</connection>
		<developerConnection>scm:git:git@github.com:RaiMan/SikuliX-2014.git</developerConnection>
		<url>git@github.com:RaiMan/SikuliX-2014.git</url>
	</scm>

	<distributionManagement>
		<repository>
			<id>sikulix.deploy</id>
			<url>${sikulix.deploy.local}</url>
		</repository>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.sikuli.libslux.Sikulix</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>